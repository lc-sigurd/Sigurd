<?xml version="1.0" encoding="utf-8"?>
<Project>
    <PropertyGroup>
        <LethalCompanyDir>C:/Program Files (x86)/Steam/steamapps/common/Lethal Company/</LethalCompanyDir>
        <TestProfileDir>$(AppData)/r2modmanPlus-local/LethalCompany/profiles/Test Sigurd/</TestProfileDir>
    </PropertyGroup>

    <!-- Enable by removing the 'false and' part of the condition -->
    <Target
        Name="CopyToTestProfile"
        AfterTargets="ThunderstorePack"
        Condition="false and $(ShouldThunderstorePackThisBuild)"
    >
        <Message Importance="high" Text="Staging $(ProjectName) to test profile..." />
        <ItemGroup>
            <StageThunderstorePackageList Include="$(ProjectDir)dist/*-$(MinVerVersion).zip" />
        </ItemGroup>
        <StageThunderstorePackage Packages="@(StageThunderstorePackageList)" StageProfilePath="$(TestProfileDir)" />
        <Message Importance="high" Text="$(ProjectName) staged successfully." />
    </Target>
</Project>
